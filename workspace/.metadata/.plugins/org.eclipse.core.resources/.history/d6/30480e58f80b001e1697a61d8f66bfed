package com.abner.minhasfinancas;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.web.servlet.config.annotation.CorsRegistry;
import org.springframework.web.servlet.config.annotation.EnableWebMvc;
import org.springframework.web.servlet.config.annotation.WebMvcConfigurer;

@SpringBootApplication
@EnableWebMvc
public class MinhasfinancasApplication implements WebMvcConfigurer {

	@Override
	public void addCorsMappings(CorsRegistry registry) {
		// WebMvcConfigurer.super.addCorsMappings(registry);

		registry.addMapping("/**") // Especifique o mapeamento dos endpoints que deseja permitir
        .allowedOrigins("http://localhost:3000") // Permite a origem do React no localhost:3000
        .allowedMethods("GET", "POST", "PUT", "DELETE") // Especifique os m√©todos HTTP permitidos
        .allowedHeaders("*");
	}

	public static void main(String[] args) {
		SpringApplication.run(MinhasfinancasApplication.class, args);
	}

}
